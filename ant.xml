<?xml version="1.0"?>

<project  name="mu_stat_calculator" basedir="." default="main">

    <property name="src.dir" value="src" />

    <property name="classes.dir" value="out\production\mu_stat_calculator" />

    <property name="build.ver" value="v0.9.0" />
    <property name="build.dir" value="build" />

    <property name="jar.dir" value="${build.dir}/${build.ver}" />
    <property name="jar.name" value="msc.${build.ver}.jar" />

    <target name="main" depends="clean,build-jar"/>

    <target name="build-jar" depends="compile">
        <mkdir dir="${jar.dir}"/>
        <jar destfile="${jar.dir}/${jar.name}"
             basedir="${classes.dir}"
             includes="**">
            <manifest>
                <attribute name="Main-Class" value="mu.app.App"/>
            </manifest>
        </jar>
    </target>

    <target name="compile">
        <mkdir dir="${classes.dir}"/>
        <javac srcdir="${src.dir}" destdir="${classes.dir}" includeantruntime="false" />
    </target>

    <target name="clean">
        <delete dir="${classes.dir}"/>
        <delete dir="${jar.dir}"/>
    </target>

</project>